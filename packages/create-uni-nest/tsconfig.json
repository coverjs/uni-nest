{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "out",
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "rootDir": "src"
  }
}
